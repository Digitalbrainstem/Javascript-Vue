{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Javascript Vue",
	"scopeName": "javascript.vue.codeblock",
	"injectionSelector": "L:source.js",
	"patterns": [
		
		{
			"include": "#vue-tag1"
		},
		{
			"include": "#vue-tag2"
		},
	
		{
			"include": "#keywords-functions"
		},
		{
			"include": "#keywords-object"
		}


	],
	"repository": {
		"vue-comment-block":{
			"match": "(\/\\*).*(\\*\/)",
			"captures": {
				"1":{
					"name":"punctuation.definition.comment.js"
				},
				"2":"punctuation.definition.comment.js"
			},
			"name":"comment.block"
		},
		"vue-tag1":{
			"name":"vue-html",
			"contentName":"vue-html",
			"begin": "((template)\\s*:)(\\s*(`))",
			"beginCaptures": {
				"1":{
					"name":"vue-template"
				},
				"2":{
					"name":"variable.other.object.js"
				},
				"3":{
					"name":"string.template.js"
				},
				"4":{
					"name":"punctuation.definition.string.template.begin.js"
				}
			},
			"end": "((`))",
			"endCaptures": {
				"1":{
					"name":"string.template.js"
				},
				"2":{
					"name":"punctuation.definition.string.template.end.js"
				}
			},
			"patterns": [
				{
					"include": "text.html.vue-html"
				}
			]
		},
		"vue-tag2":{
			"name":"vue-html",
			"contentName":"vue-html",
			"begin": "\\s*(\\S*(?=\\.))(\\.([a-zA-Z0-9\\-\\_\\*!@#$%^&:;<>?~]*))((\\()||(\\{)){1}((`))",
			"beginCaptures": {
				"1":{
					"name":"variable.other.object.js"
				},
				
				"3":{
					"name":"entity.name.function.js"
				},
				"5":{
					"name":"meta.brace.round"
				},
				"6":{
					"name":"punctuation.definition.block.js"
				},
				"7":{
					"name":"vue-html.test",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				},
				"8":{
					"name":"string.template.js"
				},
				"9":{
					"name":"punctuation.definition.string.template.begin.js"
				}
			},
			"end": "((`))",
			"endCaptures": {
				"1":{
					"name":"string.template.js"
				},
				"2":{
					"name":"punctuation.definition.string.template.end.js"
				}
			},
			"patterns": [
				{
					"include": "text.html.vue-html"
				}
			]
		},
		"keywords-functions":{
			"name":"vue.keyword",
			"match": "((props)|(computed)|(template)|(watch)|(methods)|(data)|(beforeMount)|(mounted))\\s*(?=(:\\s*(function)))",
			"captures": {
				"1":{
					"name":"entity.name.function.js"
				}
			}
		},
		"keywords-object":{
			"name":"vue.keyword2",
			"match": "((props)|(computed)|(template)|(watch)|(methods)|(data)|(beforeMount)|(mounted))\\s*(:)",
			"captures": {
				"1":{
					"name":"variable.other.object.js"
				}
			}
		}
	}
}